<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rollplayer_control"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#7000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:visibility="gone"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="4"
        >
        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rollplay_set_n"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="3"
        >
        <ImageView
            android:id="@+id/iv_setto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setto"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        >
        <ImageView
            android:id="@+id/iv_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rollplay_begin_f"
            android:layout_centerVertical="true"
            />
        <View
            android:id="@+id/iv_beginto"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_toRightOf="@+id/iv_begin"
            android:layout_toLeftOf="@+id/iv_end"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/rollplay_end_f"
            android:layout_centerVertical="true"
            />
        <View
            android:id="@+id/iv_endto"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_toRightOf="@+id/iv_end"
            android:layout_toLeftOf="@+id/iv_body"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rollplay_body_f"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="3"
        >
        <ImageView
            android:id="@+id/iv_bodyto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bodyto"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="3"
        >
        <ImageView
            android:id="@+id/iv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rollplay_start_f"
            />
    </LinearLayout>

</LinearLayout>
