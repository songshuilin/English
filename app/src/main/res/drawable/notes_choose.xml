<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:radius="15dp" />
            <stroke android:width="1dp" android:color="#1ce2e9" />
            <gradient android:centerColor="@color/transparent" android:endColor="@color/transparent" android:startColor="@color/transparent" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="15dp" />
            <stroke android:width="1dp" android:color="@color/transparent_black" />
            <gradient android:centerColor="@color/transparent" android:endColor="@color/transparent" android:startColor="@color/transparent" />
        </shape>
    </item>
</selector>