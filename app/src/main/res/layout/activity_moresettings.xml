<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lijunsai="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.app.myTool.ActionTitleBarWidget
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:fontPath="fonts/simyou.ttf" />

        <View
            style="@style/LineView"
            android:background="@color/gainsboro" />

        <View
            style="@style/LineView"
            android:layout_marginTop="10dp"
            android:background="@color/gainsboro" />

        <LinearLayout
            android:id="@+id/ll_usercenter"
            style="@style/userCenter"
            android:background="@drawable/button_select">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="帮助与安全"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    tools:fontPath="fonts/simyou.ttf" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/next" />
            </RelativeLayout>
        </LinearLayout>

        <View
            style="@style/LineView"
            android:layout_marginBottom="10dp"
            android:background="@color/gainsboro" />

        <View
            style="@style/LineView"
            android:background="@color/gainsboro" />

        <LinearLayout
            style="@style/userCenter"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tx_traffics"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:fontPath="fonts/simyou.ttf" />

            <RelativeLayout
                style="@style/userCenter"
                android:paddingRight="0dp">

                <net.naucu.englishxianshi.widget.view.SwitchView
                    android:id="@+id/sv_trafficswitch"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>

        <View
            style="@style/LineView"
            android:background="@color/gainsboro" />

        <View
            style="@style/LineView"
            android:layout_marginTop="10dp"
            android:background="@color/gainsboro" />

        <LinearLayout
            style="@style/userCenter"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tx_push"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:fontPath="fonts/simyou.ttf" />

            <RelativeLayout
                style="@style/userCenter"
                android:paddingRight="0dp">

                <net.naucu.englishxianshi.widget.view.SwitchView
                    android:id="@+id/sv_pushswitch"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>

        <View
            style="@style/LineView"
            android:background="@color/gainsboro" />

        <View
            style="@style/LineView"
            android:layout_marginTop="10dp"
            android:background="@color/gainsboro" />

        <RelativeLayout
            android:id="@+id/rl_readingset"
            style="@style/userCenter"
            android:background="@drawable/button_select">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tx_readingset"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:fontPath="fonts/simyou.ttf" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/next" />
        </RelativeLayout>

        <View
            style="@style/LineView"
            android:background="@color/gainsboro" />

        <RelativeLayout
            android:id="@+id/rl_feedback"
            style="@style/userCenter"
            android:background="@drawable/button_select">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tx_feedback"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:fontPath="fonts/simyou.ttf" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/next" />
        </RelativeLayout>

        <View
            style="@style/LineView"
            android:background="@color/gainsboro" />

        <RelativeLayout
            android:id="@+id/rl_about"
            style="@style/userCenter"
            android:background="@drawable/button_select">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tx_about"
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:fontPath="fonts/simyou.ttf" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/next" />
        </RelativeLayout>

        <View
            style="@style/LineView"
            android:layout_marginBottom="10dp"
            android:background="@color/gainsboro" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_withdrawaccount"
        style="@style/userCenter"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#00a2ed"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_withdrawaccount"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:fontPath="fonts/simyou.ttf" />
    </RelativeLayout>

</RelativeLayout>