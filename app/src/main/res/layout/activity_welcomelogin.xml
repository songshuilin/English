<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_registered_bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            tools:fontPath="fonts/simyou.ttf"
            android:background="@drawable/login_registered_buttom"
            android:text="@string/tx_login"
            android:textColor="@drawable/login_registered_button_text_click" />

        <Button
            android:id="@+id/bt_registered"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            tools:fontPath="fonts/simyou.ttf"
            android:background="@drawable/welcomelogin_registered_buttom"
            android:text="@string/tx_registered"
            android:textColor="#989898" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

</LinearLayout>