<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#333333"
        android:textSize="19sp"
        tools:fontPath="fonts/simyou.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#333333"
            android:textSize="17sp"
            tools:fontPath="fonts/simyou.ttf" />
    </LinearLayout>

    <View
        style="@style/LineView"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bu_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/promptdialog_cancel"
            android:text="@string/tx_cancel"
            android:textColor="#007aff"
            android:textSize="19sp"
            tools:fontPath="fonts/simyou.ttf" />

        <View
            style="@style/LineView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gainsboro" />

        <Button
            android:id="@+id/bt_determine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/promptdialog_determine"
            android:text="@string/tx_determine"
            android:textColor="#007aff"
            android:textSize="19sp"
            tools:fontPath="fonts/simyou.ttf" />
    </LinearLayout>

</LinearLayout>