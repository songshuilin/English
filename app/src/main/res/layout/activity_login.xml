<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_registered_bg"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <RelativeLayout

        android:id="@+id/login_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/bar_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/backs"
            tools:fontPath="fonts/simyou.ttf" />

        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:fontPath="fonts/simyou.ttf" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/ed_username"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/login_registered_liftup"

                    android:drawableLeft="@drawable/login_user"
                    android:drawablePadding="5dp"
                    android:hint="@string/loginhint"
                    android:inputType="text"
                    android:maxLength="11"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/transparent_white"
                    tools:fontPath="fonts/simyou.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/ed_userpassword"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/login_registered_liftup"
                    android:drawableLeft="@drawable/login_lock"
                    android:drawablePadding="5dp"
                    android:hint="@string/passwordhint"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:textColorHint="@color/transparent_white"
                    tools:fontPath="fonts/simyou.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/login_registered_buttom"
                    android:text="@string/tx_login"
                    android:textColor="@drawable/login_registered_button_text_click"
                    tools:fontPath="fonts/simyou.ttf" />

                <Button
                    android:id="@+id/bt_RetrievePassword"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_registered_buttom"
                    android:text="@string/retrievepassword"
                    android:textColor="@color/white"
                    tools:fontPath="fonts/simyou.ttf" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            tools:fontPath="fonts/simyou.ttf" />
    </LinearLayout>

</LinearLayout>