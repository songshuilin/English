<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_smalltext_video"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#cc000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="小号字"
            android:textColor="#ffffff"
            android:textSize="14sp"
            tools:fontPath="fonts/simyou.ttf" />

        <ImageView
            android:id="@+id/iv_smalltext_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/textsize_chosen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middletext_video"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1px"
        android:background="#cc000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="中号字"
            android:textColor="#ffffff"
            android:textSize="17sp"
            tools:fontPath="fonts/simyou.ttf" />

        <ImageView
            android:id="@+id/iv_middletext_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/textsize_chosen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_largetext_video"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1px"
        android:background="#cc000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="大号字"
            android:textColor="#ffffff"
            android:textSize="20sp"
            tools:fontPath="fonts/simyou.ttf" />

        <ImageView
            android:id="@+id/iv_largetext_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/textsize_chosen" />
    </RelativeLayout>
</LinearLayout>
