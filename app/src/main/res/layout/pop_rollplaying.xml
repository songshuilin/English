<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Weakpink"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/record_start_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_top_recordPop"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#7ab"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_scoreDescribe_recordPop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="本句得分"
                android:textColor="#fff"
                android:textSize="16sp"
                tools:fontPath="fonts/simyou.ttf" />

            <TextView
                android:id="@+id/tv_score_recordPop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="0分"
                android:textColor="#f47"
                android:textSize="16sp"
                tools:fontPath="fonts/simyou.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_function_recordPop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#7ab"
            android:orientation="vertical"
            android:paddingBottom="15dp"

            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_regular_recordPop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="继续"
                    android:textColor="#fff"
                    tools:fontPath="fonts/simyou.ttf" />

                <TextView
                    android:id="@+id/iv_audition_recordPop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="试听"
                    android:textColor="#fff"
                    tools:fontPath="fonts/simyou.ttf" />

                <TextView
                    android:id="@+id/iv_remake_recordPop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="重录"
                    android:textColor="#fff"
                    tools:fontPath="fonts/simyou.ttf" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_recordPop"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_first_recordbottom_pop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#f555"
                android:gravity="center"
                android:text="back"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:fontPath="fonts/simyou.ttf" />

            <TextView
                android:id="@+id/tv_second_recordbottom_pop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_weight="5"
                android:background="#f555"
                android:gravity="center"
                android:text="准备录音"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:fontPath="fonts/simyou.ttf" />

            <TextView
                android:id="@+id/tv_third_recordbottom_pop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#f555"
                android:gravity="center"
                android:text="OK"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:fontPath="fonts/simyou.ttf" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/record_comple_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7ab"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="成绩："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:fontPath="fonts/simyou.ttf" />

                <TextView
                    android:id="@+id/tv_total_scroe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0分"
                    android:textColor="#f47"
                    android:textSize="16sp"
                    tools:fontPath="fonts/simyou.ttf" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f47" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dianyingyuanyin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="电影原音"
                android:textColor="#fff"
                tools:fontPath="fonts/simyou.ttf" />

            <TextView
                android:id="@+id/tv_wodeluyin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的录音"
                android:textColor="#fff"
                tools:fontPath="fonts/simyou.ttf" />

            <TextView
                android:id="@+id/tv_zhengyinlangdu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="正音朗读"
                android:textColor="#fff"
                tools:fontPath="fonts/simyou.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dibuanniu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="#f555"
                android:gravity="center"
                android:text="Back"
                android:textSize="18sp"
                tools:fontPath="fonts/simyou.ttf" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="#f555"
                android:gravity="center"
                android:text="保存录音"
                android:textSize="18sp"
                tools:fontPath="fonts/simyou.ttf" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>