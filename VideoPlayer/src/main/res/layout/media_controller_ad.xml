<!-- 广告显示 的显示 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/srt_chinese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/srt_english"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@id/srt_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/srt_chinese_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/srt_english_big"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@id/srt_english_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>